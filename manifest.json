{
  "name": "ideat-cookies",
  "manifest_version": 3,
  "version": "1.0",
  "permissions": ["cookies", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/content-script.js"],
      "run_at": "document_start"
    }
  ]
}
